<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.fourllc.donate.MainActivity">

        <LinearLayout
            android:id="@+id/main_activity_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:padding="@dimen/margin_horizontal_small"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/main_activity_header_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="8sp"
                android:text="Luekemia &amp; Lymphoma Man Of The Year Campaign"
                android:textColor="#ffffff"
                android:textSize="26sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:maxWidth="320dp"
                android:text="Join us as we lead the battle to defeat cancer. Help the Luekemia &amp; Lymphoma Society."
                android:textColor="#f1f1f1"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.04"
                android:text="Run by LLS"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.04"
                android:text="Charity Registration No. 277424"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!--tabbed details layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/main_activity_header_container">

            <!-- tab layout to display tabs -->
            <android.support.design.widget.TabLayout
                android:id="@+id/main_activity_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minHeight="?attr/actionBarSize"
                android:paddingTop="15dp"
                app:tabGravity="center"
                app:tabTextAppearance="@style/mainActivityTabStyle" />

            <!-- view pager to swipe views -->
            <android.support.v4.view.ViewPager
                android:id="@+id/main_activity_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginEnd="16dp"
            android:elevation="6dp"
            android:src="@drawable/ic_share_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_activity_header_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_activity_header_container" />

    </android.support.constraint.ConstraintLayout>
</ScrollView><!--header layout-->
