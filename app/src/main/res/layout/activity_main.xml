<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincontent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/main_activity_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|end"
                    android:paddingBottom="@dimen/margin_horizontal_small"
                    android:paddingLeft="@dimen/margin_horizontal_large"
                    android:paddingRight="14dp"
                    android:paddingTop="?attr/actionBarSize"
                    app:layout_collapseMode="parallax">


                    <LinearLayout
                        android:id="@+id/main_activity_header_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/main_activity_header_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/header_sub_heading"
                            android:textColor="#ffffff"
                            android:textSize="28sp"
                            android:textStyle="normal"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/main_activity_header_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/header_heading"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            app:layout_constraintTop_toBottomOf="@id/main_activity_header_heading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="4sp"
                            android:maxWidth="320dp"
                            android:text="@string/header_body"
                            android:textColor="#f1f1f1"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="-0.04"
                            android:text="@string/header_run_by"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:letterSpacing="-0.04"
                            android:text="@string/header_charity"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/money_progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        app:layout_constraintTop_toBottomOf="@id/main_activity_header_text" />

                    <ProgressBar
                        android:id="@+id/blood_progress_bar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        android:theme="@style/progressBar"
                        app:layout_constraintTop_toBottomOf="@id/money_progress_bar" />

                </android.support.constraint.ConstraintLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:alpha="0.1"-->
                <!--android:background="@drawable/header_main_image"-->
                <!--android:fitsSystemWindows="true"-->
                <!--app:layout_collapseMode="parallax"/>-->

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:scrollbars="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/details_top_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="#eee" />

                    <ImageView
                        android:id="@+id/details_avatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/details_top_divider"
                        android:layout_marginLeft="@dimen/margin_horizontal_large"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        android:src="@drawable/ic_account_circle_black_24dp" />

                    <TextView
                        android:id="@+id/details_campaign_owner_label"
                        style="@style/captionStyle"
                        android:layout_alignTop="@id/details_avatar"
                        android:layout_marginLeft="@dimen/margin_horizontal_small"
                        android:layout_toRightOf="@id/details_avatar"
                        android:text="@string/campaign_owner_label" />

                    <TextView
                        android:id="@+id/details_campaign_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/details_campaign_owner_label"
                        android:layout_below="@id/details_campaign_owner_label"
                        android:text="@string/campaign_owner"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/parent_charity_label"
                        style="@style/captionStyle"
                        android:layout_alignTop="@id/parent_charity"
                        android:layout_toLeftOf="@id/parent_charity"
                        android:text="@string/parent_charity_label"
                        app:layout_constraintBottom_toBottomOf="@id/parent_charity" />

                    <ImageView
                        android:id="@+id/parent_charity"
                        android:layout_width="71dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@id/details_campaign_owner_label"
                        android:layout_marginRight="@dimen/margin_horizontal_large"
                        android:src="@drawable/lls_logo" />

                    <ImageView
                        android:id="@+id/details_bottom_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/details_avatar"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        android:background="#eee" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_horizontal_large"
                    android:layout_marginRight="@dimen/margin_horizontal_large"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/story_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/campaign_story_title"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/campaign_story" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <LinearLayout
            android:id="@+id/bottom_stuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#f4f4f4"
            android:elevation="8dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="@dimen/margin_horizontal_large">

            <Button
                android:id="@+id/donateMoneyButton"
                style="@style/mainDonateButtons"
                android:background="@color/colorAccent"
                android:text="Donate Money" />

            <Button
                android:id="@+id/donateBloodButton"
                style="@style/mainDonateButtons"
                android:layout_marginLeft="@dimen/margin_horizontal_large"
                android:background="@color/colorPrimary"
                android:text="Donate Blood" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>